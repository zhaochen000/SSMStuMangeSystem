        <script type="text/javascript">
            $(function () {
			    $(".list-group-item").click(function(){
				    if ( $(this).find("ul") ) {
						$(this).toggleClass("tree-closed");
						if ( $(this).hasClass("tree-closed") ) {
							$("ul", this).hide("fast");
						} else {
							$("ul", this).show("fast");
						}
					}
				});
				$("#btnCourseEdit").click(function() {
					$.ajax({
						url:"${ItemPath}/course/courseEditSubmit",
						type:"post",
						data:{"coursename":$("#coursename").val(),"coursetype":$("#coursetype").val(),"coursescore":$("#coursescore").val(),"courseid":$("#courseid").val()},
						success:function(result){
							window.location.href = "${ItemPath}/course/courseList";
						}
					});
				});
            });
        </script>
